{
  "llm": {
    "ollama": {
      "model_name": "llama3.2",
      "base_url": "http://localhost:11434",
      "timeout": 300,
      "temperature": 0.1,
      "keep_alive": 600,
      "top_p": 0.95,
      "max_tokens": 1024,
      "embeddings": {
        "model_name": "all-MiniLM-L6-v2",
        "model_kwargs": {
          "device": "cpu"
        },
        "encode_kwargs": {
          "normalize_embeddings": true
        }
      }
    },
    "vllm": {
      "model": "/opt/model/gpt2",
      "temperature": 0.1,
      "max_tokens": 1024,
      "top_p": 0.95,
      "vllm_kwargs": {
        "device": "cpu",
        "max_model_len": 4096,
        "trust_remote_code": true,
        "dtype": "auto",
        "disable_log_requests": true,
        "disable_log_stats": false
      },
      "embeddings": {
        "model_name": "sentence-transformers/all-MiniLM-L6-v2",
        "model_kwargs": {
          "device": "cpu"
        },
        "encode_kwargs": {
          "normalize_embeddings": true
        }
      }
    },
    "openai": {
      "api_key": "",
      "api_url": "https://api.openai.com/v1",
      "model": "gpt-4o",
      "temperature": 0.1,
      "max_tokens": 2048,
      "embeddings": {
        "model_name": "text-embedding-3-large",
        "model_kwargs": {},
        "encode_kwargs": {
          "normalize_embeddings": true
        }
      }
    },
    "qwen": {
      "api_key": "",
      "api_url": "https://dashscope.aliyuncs.com/compatible-mode/v1/chat/completions",
      "model": "qwen-plus",
      "temperature": 0.1,
      "max_tokens": 2048,
      "embeddings": {
        "model_name": "text-embedding-v1",
        "model_kwargs": {},
        "encode_kwargs": {
          "normalize_embeddings": true
        }
      }
    }
  },
  "default_llm": "qwen",
  "retrieval": {
    "chain_type": "stuff",
    "search_kwargs": {
      "k": 3
    },
    "return_source_documents": true
  },
  "text_splitter": {
    "chunk_size": 1000,
    "chunk_overlap": 200
  },
  "knowledge_base": {
    "data_dir": "data",
    "medical_keywords": [
      "medical",
      "health",
      "disease",
      "treatment",
      "medicine",
      "symptoms"
    ]
  },
  "vector_store": {
    "persist_directory": {
      "ollama": "./chroma_db_ollama",
      "vllm": "./chroma_db_vllm",
      "openai": "./chroma_db_openai",
      "qwen": "./chroma_db_qwen"
    }
  },
  "example_questions": [
    "什么是高血压？如何预防？",
    "老年高血压患者有哪些注意事项？",
    "脑血栓的高危因素有哪些？如何预防？",
    "糖尿病的预防措施有哪些？",
    "老年人如何保持健康的生活方式？"
  ]
}